@model Product
@{
    ViewData["Title"] = "New";
    SelectList categList = new SelectList(ViewBag.CategoryList, "ID", "Categ_Name");
}

<h1></h1>
<br />
<h4>New Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveNEw" asp-controller="Product" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group row">
              <label class=" control-label" asp-for="Image" >Select Image: </label>
              <div class="col-md-5">
              <label  class="file center-block"></label>
                    <input type="file" asp-for="Image" class="mb-2">
                    <span asp-validation-for="Image" class="file-custom"></span>
              </div>
             </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisCount" class="control-label"></label>
                <input asp-for="DisCount" class="form-control" />
                <span asp-validation-for="DisCount" class="text-danger"></span>
            </div>
               <div>
                 <label asp-for="Categ_Id"></label>
                  <select class="form-control" asp-for="Categ_Id" asp-items="categList">
                       <option value="0"> select Category</option>
                  </select>
                    <span asp-validation-for="Categ_Id" class="text-danger"></span>
    </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger m-2 ">Back to List</a>
</div>

